


@if (IsVisible)
{
    <div class="alert @ClassName alert-dismissible fade show" role="alert">
        <strong>@Body</strong> 
        <button type="button" class="close" data-dismiss="alert" aria-label="Close" @onclick="OnCloseAlert">
            <span aria-hidden="true">&times;</span>
        </button>
    </div>
}


@code {

    [Parameter] public AlertType AType { get; set; }
    [Parameter] public string Body { get; set; }
    [Parameter] public bool IsVisible { get; set; }
    private string ClassName { get; set; }


    protected override void OnInitialized()
    {
        base.OnInitialized();

        switch (AType)
        {
            case AlertType.Danger:
                ClassName = "alert-danger";
                break;
            case AlertType.Warning:
                ClassName = "alert-warning";
                break;
            case AlertType.Info:
                ClassName = "alert-info";
                break;
            case AlertType.Success:
                ClassName = "alert-success";
                break;
        }
    }

    private void OnCloseAlert()
    {
        IsVisible = false;
    }

    public enum AlertType
    {
        Warning,
        Danger,
        Success,
        Info
    }
}
